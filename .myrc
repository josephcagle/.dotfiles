# I got this program usage from https://www.funtoo.org/Keychain
sshkeychain () {
    if hash keychain 2>/dev/null ; then
        eval `keychain --eval --agents ssh id_rsa`
    else
        echo >&2 .myrc: program '`'keychain"'" not found
    fi
}

sshkeychain

